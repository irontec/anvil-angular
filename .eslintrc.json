{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "eqeqeq": "warn",
        "no-fallthrough": "off",
        "no-shadow": "warn",
        "arrow-body-style": ["warn", "as-needed"],
        "arrow-parens": ["warn", "as-needed"],
        "no-var": "error"
    },
    "globals": {
        "angular": true
    },
    "env": {
        "browser": true
    }
}